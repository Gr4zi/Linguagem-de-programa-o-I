package tp01;
import java.util.Scanner;

/**
 *Exercicio 06: Calcular e exibir a média aritmética de quatro valores quaisquer que serão digitados.
 */
public class TP01Ex06 {
    public static void main(String[] args){
        Scanner ler= new Scanner(System.in);
        
        int valor1;
        System.out.printf("Informe o primeiro valor:\n");
        valor1=ler.nextInt();
        System.out.printf("\n");
        
        int valor2;
        System.out.printf("Informe o primeiro valor:\n");
        valor2=ler.nextInt();
        System.out.printf("\n");
        
        int valor3;
        System.out.printf("Informe o primeiro valor:\n");
        valor3=ler.nextInt();
        System.out.printf("\n");
        
        int valor4;
        System.out.printf("Informe o primeiro valor:\n");
        valor4=ler.nextInt();
        System.out.printf("\n");
        
        int media=(valor1+valor2+valor3+valor4)/4;
        System.out.printf("A média aritmética dos valores "+valor1+", "+valor2+", "+valor3+" e "+valor4+" é: "+media+".");
    
    }
}
