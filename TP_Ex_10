package tp01;

import java.util.Scanner;

/**
 *Exercicio10:  Entrar via teclado com o valor de uma temperatura em graus Celsius, calcular e exibir sua temperatura equivalente em Fahrenheit. 
 */
public class TP01Ex10 {
    public static void main(String[] args){
        Scanner ler = new Scanner(System.in);
        
        double tempc;
        System.out.printf("Informe o valor da temperatura em ºC:\n");
        tempc=ler.nextInt();
        System.out.printf("\n");
        
        double tempf=(tempc*1.8)+32;
        System.out.printf(tempc+"ºC é igual a "+tempf+"ºF.");
    
    }
}
