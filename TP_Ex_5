package tp01;
import java.util.Scanner;

/**
 *Exercicio 05: Calcular e exibir o volume de uma esfera a partir do valor de seu diâmetro que será digitado.
 */
public class TP01Ex05 {
    public static void main(String[] args){
        Scanner ler = new Scanner(System.in);
        int diametro;
        
        System.out.printf("Informe o tamanho da diametro da esfera:\n");
        diametro=ler.nextInt();
        System.out.printf("\n");
    
        int raio=diametro/2;
        
        double volume=(4*Math.PI*Math.pow(raio, 3))/3;
        
        System.out.printf("O volume da esfera de diametro "+diametro+" é "+volume+".");
        
    }
}
