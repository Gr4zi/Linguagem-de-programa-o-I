package tp01;
import java.util.Scanner;
/**
 *Exercicio 01: Entrar via teclado com a base e a altura de um retângulo, calcular e exibir sua área.
 */
public class TP01Ex01 {
    public static void main(String[] args){
        Scanner ler = new Scanner(System.in);
        int area, base, altura;
        System.out.printf("Informe o tamanho da base do retângulo:\n");
        base=ler.nextInt();
        System.out.printf("\n");
        
        System.out.printf("Informe o tamanho da altura do retângulo:\n");
        altura=ler.nextInt();
        System.out.printf("\n");
        
        area=base*altura;
        
        System.out.printf("A área do retângulo de base "+base+" e altura "+altura+" é "+area+".");
    }
}
