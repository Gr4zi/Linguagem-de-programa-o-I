package tp01;
import java.util.Scanner;

/**
 *Exercicio 08: Sabendo que uma milha marítima equivale a um mil, oitocentos e cinquenta e dois metros e que um quilômetro possui mil metros, fazer um programa para converter milhas marítimas em quilômetros
 */
public class TP01Ex08 {
    public static void main(String[] args){
        Scanner ler=new Scanner(System.in);
        
        double mm;
        System.out.printf("Informe a quantidade de milhas maritimas:\n");
        mm=ler.nextInt();
        System.out.printf("\n");
        
        double km=mm*1.852;
        System.out.printf(mm+" milhas maritimas é igual a "+km+" quilometros.");
    
    }
}
