package tp01;

import java.util.Scanner;

/**
 *Exercicio 17: Entrar via teclado com dois valores quaisquer “X” e “Y”. Calcular e exibir o cálculo XY (“X” elevado a “Y”). Pesquisar as funções Exp e Ln. 
 */
public class TP01Ex17 {
    public static void main(String[] args){
        Scanner ler = new Scanner(System.in);
        
        int x;        
        System.out.printf("Informe o valor da base:\n");
        x=ler.nextInt();
        System.out.printf("\n");
               
        int y;        
        System.out.printf("Informe o valor do expoente:\n");
        y=ler.nextInt();
        System.out.printf("\n");
        
        double potencia=Math.pow(x,y);
        
        System.out.printf(x+" elevado a "+y+" é igual a "+potencia+".");
        
    }
}
