package tp01;
import java.util.Scanner;

/**
 *Exercicio 03: Calcular e exibir a área de um quadrado a partir do valor de sua diagonal que será digitado.
 */
public class TP01Ex03 {
     public static void main(String[] args){
         Scanner ler = new Scanner(System.in);
         int diagonal;
         
        System.out.printf("Informe o tamanho da diagonal do quadrado:\n");
        diagonal=ler.nextInt();
        System.out.printf("\n");
        
        int area=(diagonal*diagonal)/2;
        
        System.out.printf("A área do quadrado de diagonal "+diagonal+" é "+area+".");
     }
}
